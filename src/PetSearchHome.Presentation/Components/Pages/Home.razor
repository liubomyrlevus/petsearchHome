@page "/home"
@inject ViewModels.HomeViewModel ViewModel
@implements IDisposable
@using PetSearchHome.BLL.Domain.Enums 

<PageTitle>Головне вікно</PageTitle>

<h1>Каталог тварин</h1>
<p>Тут ви можете знайти собі улюбленця.</p>

<div class="filter-form">
    <div class="row g-2">
        <div class="col-md-5">
            <InputText @bind-Value="ViewModel.SearchTerm" @onchange="ViewModel.LoadListingsCommand.ExecuteAsync" class="form-control" placeholder="Пошук за породою, описом..." />
        </div>
        <div class="col-md-3">
            <InputSelect @bind-Value="ViewModel.SelectedAnimalType" @onchange="ViewModel.LoadListingsCommand.ExecuteAsync" class="form-select">
                <option value="">-- Всі тварини --</option>
                <option value="@AnimalType.dog">Собаки</option>
                <option value="@AnimalType.cat">Коти</option>
                <option value="@AnimalType.bird">Птахи</option>
                <option value="@AnimalType.other">Інші</option>
            </InputSelect>
        </div>
        <div class="col-md-2">
            <InputText @bind-Value="ViewModel.City" @onchange="ViewModel.LoadListingsCommand.ExecuteAsync" class="form-control" placeholder="Місто..." />
        </div>
        <div class="col-md-2">
            <button type="button" class="btn btn-primary w-100" @onclick="ViewModel.LoadListingsCommand.ExecuteAsync">
                Пошук
            </button>
        </div>
    </div>
</div>
<hr />


@if (ViewModel.IsBusy)
{
    <p><em>Завантаження...</em></p>
}
else if (!string.IsNullOrEmpty(ViewModel.ErrorMessage))
{
    <div class="alert alert-danger">@ViewModel.ErrorMessage</div>
}
else if (!ViewModel.Listings.Any())
{
    <p><em>За вашим запитом нічого не знайдено.</em></p>
}
else
{
    <div class="pet-catalog-grid">
        @foreach (var listing in ViewModel.Listings)
        {
            <div class="pet-card">
                <img src="@(string.IsNullOrEmpty(listing.MainPhotoUrl) ? "/images/default-pet.png" : listing.MainPhotoUrl)" alt="Фото тварини" />

                <button class="favorite-btn" @onclick="() => ViewModel.AddFavoriteCommand.ExecuteAsync(listing.Id)">
         
                </button>

                <div class="pet-card-body">
                    <h5>@listing.Breed</h5>
                    <p>@listing.City</p>
                    <p>Тип: @listing.AnimalType, Вік: @listing.AgeMonths міс.</p>
                    <a href="/listing/@listing.Id" class="btn btn-primary">Детальніше</a>
                </div>
            </div>
        }
    </div>
}

@code {
    protected override async Task OnInitializedAsync()
    {
        ViewModel.PropertyChanged += (_, _) => StateHasChanged();

        // Автоматично завантажуємо оголошення при першому вході на сторінку
        if (ViewModel.LoadListingsCommand.CanExecute(null))
        {
            await ViewModel.LoadListingsCommand.ExecuteAsync(null);
        }
    }

    public void Dispose()
    {
        ViewModel.PropertyChanged -= (_, _) => StateHasChanged();
    }
}