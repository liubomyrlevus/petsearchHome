@inject PetSearchHome.Presentation.Services.CurrentUserService CurrentUser
@inject NavigationManager NavigationManager

<div class="nav-container">
    <div class="nav-header">
        <div class="brand">
            <div class="brand-mark">P</div>
            <div class="brand-text">
                <span class="brand-title">PetSearchHome</span>
                <small>Знайди друга поруч</small>
            </div>
        </div>
        <input id="navToggle" type="checkbox" title="Меню" class="navbar-toggler" />
        <label for="navToggle" class="nav-toggle-btn" aria-label="Відкрити меню"></label>
    </div>

    <div class="nav-scrollable" onclick="document.getElementById('navToggle').checked = false">
        <nav class="flex-column">
            <div class="nav-item">
                @if (CurrentUser.IsLoggedIn || CurrentUser.IsGuest)
                {
                    <NavLink class="nav-link" href="/home" Match="NavLinkMatch.All">
                        <span class="@DotClass"></span> Головна
                    </NavLink>
                }
                else
                {
                    <span class="nav-link disabled">
                        <span class="@DotClass"></span> Головна
                    </span>
                }
            </div>

            <div class="nav-item">
                @if (CurrentUser.IsLoggedIn)
                {
                    <NavLink class="nav-link" href="/create-listing">
                        <span class="@DotClass"></span> Створити оголошення
                    </NavLink>
                }
                else
                {
                    <span class="nav-link disabled">
                        <span class="@DotClass"></span> Створити оголошення
                    </span>
                }
            </div>

            <div class="nav-item">
                @if (CurrentUser.IsLoggedIn)
                {
                    <NavLink class="nav-link" href="/favorites">
                        <span class="@DotClass"></span> Обране
                    </NavLink>
                }
                else
                {
                    <span class="nav-link disabled">
                        <span class="@DotClass"></span> Обране
                    </span>
                }
            </div>

            <div class="nav-item">
                @if (CurrentUser.IsLoggedIn)
                {
                    <NavLink class="nav-link" href="/my-listings">
                        <span class="@DotClass"></span> Мої оголошення
                    </NavLink>
                }
                else
                {
                    <span class="nav-link disabled">
                        <span class="@DotClass"></span> Мої оголошення
                    </span>
                }
            </div>

            <div class="nav-item">
                @if (CurrentUser.IsLoggedIn)
                {
                    <NavLink class="nav-link" href="/profile">
                        <span class="@DotClass"></span> Профіль
                    </NavLink>
                }
                else
                {
                    <span class="nav-link disabled">
                        <span class="@DotClass"></span> Профіль
                    </span>
                }
            </div>

            @if (CurrentUser.IsLoggedIn && CurrentUser.IsAdmin)
            {
                <div class="nav-item">
                    <NavLink class="nav-link" href="/admin">
                        <span class="@DotClass"></span> Адмін-панель
                    </NavLink>
                </div>
            }

            @if (CurrentUser.IsLoggedIn || CurrentUser.IsGuest)
            {
                <div class="nav-item">
                    <button type="button" class="btn btn-outline-secondary nav-logout-btn" @onclick="Logout">
                        Вийти
                    </button>
                </div>
            }
            else
            {
                <div class="nav-item">
                    <NavLink class="nav-link" href="/login">
                        <span class="@DotClass"></span> Увійти
                    </NavLink>
                </div>
            }
        </nav>
    </div>
</div>

@code {
    private string DotClass => CurrentUser.IsLoggedIn ? "dot" : "dot danger";

    private void Logout()
    {
        CurrentUser.ClearUser();
        NavigationManager.NavigateTo("/login", forceLoad: true);
    }
}
